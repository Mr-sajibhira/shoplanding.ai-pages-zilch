<style>
.id_{{ section.id }}{
  padding:80px 0px;
  background-color:#e6faf2;

  }
   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}

.id_{{ section.id }} .container .row{
    display:flex;
    flex-wrap:wrap;
    margin:-16px;
  align-items: center;
}
.id_{{ section.id }} .container .row .col{
    max-width:50%;
    width:100%;
    box-sizing: border-box;
    padding:16px;
}

.id_{{ section.id }} img{
    max-width:100%;
    object-fit: cover;
    display:block;
} 

.id_{{ section.id }} .content h2{
    font-size: 46px;
    line-height: 120%;
    font-weight: 600;
    color: #00d286;
    margin:0px 0px 16px 0px;
}  
  
.id_{{ section.id }} .content .des{
    font-size: 20px;
    line-height: 180%;
    font-weight: 400;
    color: #000000;
    margin:0px 0px 20px 0px;
}    
.id_{{ section.id }} .content .des ul{
    padding-inline-start: 0;
   margin-block: 0;
 }
.id_{{ section.id }} .content .des ul li{
     list-style: none;
     margin-bottom:10px;
     display: flex;
}
.id_{{ section.id }} .content .des ul li::before{
   content: "\002B";
   font-size:20px;
   font-weight:500;
   margin-right: 10px;
  color:#00d286;
}



    
@media(max-width:768px){

.id_{{ section.id }}{
   padding:50px 20px;
    }

  .id_{{ section.id }} .container .row{
    margin:0px;
    gap:30px;
  }

.id_{{ section.id }} .container .row .col{
    max-width:100%;
    padding:0px;
}

  .id_{{ section.id }} .content h2{
    font-size: 38px;
     text-align: center;
} 
  
.id_{{ section.id }} .content .des{
    font-size: 18px;
    margin:0px 0px 20px 0px;
}    


 

  
}    

</style>

<section class="id_{{ section.id }}">

  <div class="container">
    <div class="row">
       {% for block in section.blocks %}
            {% case block.type %}
                  {% when "image" %}
                    <div class="col">
                           {% if block.settings.img != blank %}
                              <img style="aspect-ratio:{{ block.settings.aspect-ratio }};" src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="100%" height="100%">
                           {% endif %}
                      </div>
                  {% when "content" %}
                  <div class="col">
                    <div class="content">
                                       
                      <h2>{{ block.settings.title }}</h2>
                      <div class="des">{{ block.settings.des }}</div>           
                        
                    </div>
                
                  </div>
            {% endcase %}
       {% endfor %}
      </div>
  </div>

  
</section>


{% schema %}
  {
     "name": "Zilch Text Image",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name":"Image",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          },
          {
            "type": "text",
            "label": "Aspect Ratio",
            "id": "aspect-ratio",
            "default":"8/8"
          }
        ]
      },
      {
        "type": "content",
        "name":"Content",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default":"Why Pay over 6 weeks?"
          },
          {
            "type": "richtext",
            "label": "Description",
            "id": "des"
          }

        ]
      }
    ],
    "presets": [
      {
        "name": "Zilch Text Image",
        "blocks": [
                    {
            "type": "content"
          },

          {
            "type": "image"
          }

        ]
      }
    ]
    
  }
{% endschema %}















