{{ 'swiper.css' | asset_url | stylesheet_tag }}
{{ 'swiper.js' | asset_url | script_tag }}


<style>
.id_{{ section.id }}{
  padding:80px 0px;
  background-color:#ffffff;

  }
   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}
.id_{{ section.id }} .content {
 max-width:400px;
 margin:0px auto;
}
  
.id_{{ section.id }} .content h2{
    font-size: 55px;
    line-height: 120%;
    font-weight: 600;
    color: #00d286;
    margin:0px 0px 16px 0px;
   text-align: center;
}  
  
.id_{{ section.id }} .des{
    font-size: 22px;
    line-height: 180%;
    font-weight: 400;
    color: #000000;
    margin:0px 0px 15px 0px;
}

.id_{{ section.id }} .main_slider_div{
  position: relative;
  height: 100%;
}
  
.id_{{ section.id }} .swiper {
      width: 100%;
      height: 100%;
}

.id_{{ section.id }} .swiper-slide {
     text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.id_{{ section.id }}  .single_box img{
  max-width:130px;
  width:100%;
  display:block;
  margin:0px auto;
}
  
    
@media(max-width:768px){

.id_{{ section.id }}{
   padding:50px 20px;
}


.id_{{ section.id }} .content h2{
    font-size: 36px;
    text-align: center;
    max-width: 300px;
    margin: 0px auto 20px auto;
}
 
.id_{{ section.id }}  .des{
    font-size: 18px;
   text-align: center;
}    



  
}
</style>  

<section class="id_{{ section.id }}">
  <div class="container">
     <div class="content">
       <h2>{{ section.settings.title }}</h2>
   

    <div class="main_slider_div">
        <div class="swiper zilchSwiper">
           <div class="swiper-wrapper">
              {% for block in section.blocks %}
                 <div class="swiper-slide">
                    <div class="single_box">
                        <p class="des">"{{ block.settings.des }}"</p>
                        <p class="des">{{ block.settings.name }}</p>
                        {% if block.settings.img != blank %}
                              <img  src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="100%" height="100%">
                        {% endif %}
                    </div>
                 </div>
              {% endfor %}
            </div>
        </div>
    </div>
       
    </div>
  </div>
</section>

  <script>
    var swiper = new Swiper(".zilchSwiper", {
      spaceBetween: 30,
      centeredSlides: true,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      }
    });
  </script>



{% schema %}
  {
    "name": "Zilch Review Slider",
    "settings": [

      {
        "type": "text",
        "label": "Title",
        "id": "title",
        "default":"Weâ€™re getting lots of love."
      }
    ],
    "blocks": [
      {
        "type": "slider",
        "name":"slider",
        "settings": [
          {
            "type": "textarea",
            "label": "Description",
            "id": "des",
            "default":"This app is amazing. I love it!"
          },
          {
            "type": "text",
            "label": "Name",
            "id": "name",
            "default":"Kimberly Chapman"
          },
          {
            "type": "image_picker",
            "label": "Review Image",
            "id": "img"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Zilch Review Slider"
      }
    ]
  }
{% endschema %}