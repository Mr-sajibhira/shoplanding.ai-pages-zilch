<style>
.id_{{ section.id }}{
  padding:150px 0px;
  background-color:#e6faf2;

  }
   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}

 

.id_{{ section.id }} h2{
    font-size: 55px;
    line-height: 120%;
    font-weight: 600;
    color: #00d286;
    margin:0px 0px 80px 0px;
   text-align: center;
}  

.id_{{ section.id }} .buttom_div{
  display:flex;
  justify-content:center;
  gap:30px;
}
   
.id_{{ section.id }} .btn{
    display: inline-block;
    text-decoration: none;
    transition-duration:.3s;
    background-color: #00d286;
    color:#ffffff;
     padding: 8px 24px;
    border: 1px solid #ffffff;
    font-size: 18px;
    font-weight: 400;
    line-height: 150%;
    border-radius: 30px;
}
.id_{{ section.id }} .btn:hover{
    background-color: #6b706d;
     color:#ffffff;
}
    
@media(max-width:768px){

.id_{{ section.id }}{
   padding:80px 20px;
    }

  .id_{{ section.id }}  h2{
    font-size: 36px;
    text-align: center;
    max-width: 300px;
    margin: 0px auto 40px auto;

} 
.id_{{ section.id }} .buttom_div{
  gap:20px;
}  
  
 
}    

</style>

<section class="id_{{ section.id }}">

  <div class="container">
       <h2>{{ section.settings.title }}</h2>

        <div class="buttom_div">
          {% if section.settings.btn_url1 != blank %}
                  <a class="btn" href="{{ section.settings.btn_url1 }}">{{ section.settings.btn_text1 }}</a>
          {% endif %}
         {% if section.settings.btn_url2 != blank %}
                  <a class="btn" href="{{ section.settings.btn_url2 }}">{{ section.settings.btn_text2 }}</a>
          {% endif %}

      </div>
  </div>

  
</section>


{% schema %}
  {
       "name": "Zilch Text Buttom",
    "settings": [
         {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default":"Got more questions?"
          },
         {
            "type": "text",
            "label": "Buttom Text 1",
            "id": "btn_text1",
            "default":"FAQs."
          },
          {
            "type": "url",
            "label": "Buttom Url 1",
            "id": "btn_url1"
          },
          {
            "type": "text",
            "label": "Buttom Text 2",
            "id": "btn_text2",
            "default":"SUPPORT"
          },
          {
            "type": "url",
            "label": "Buttom Url 2",
            "id": "btn_url2"
          }
    ],
   
    "presets": [
      {
        "name": "Zilch Text Buttom"
      }
    ]
    
  }
{% endschema %}















