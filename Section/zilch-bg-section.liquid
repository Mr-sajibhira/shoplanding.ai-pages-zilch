
<style>
.id_{{ section.id }}{
  padding:350px 0px;
  background-image:url({{section.settings.bg_img | image_url}});
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;  
  position: relative;
  }
 .id_{{ section.id }}::after{
    content: "";
    position: absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    background-color:#000000;
    opacity: 40%;
    z-index:0;
 }   
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
    position: relative;
    z-index:1;
}

.id_{{ section.id }} .container h2{
    font-size: 46px;
    line-height: 120%;
    font-weight: 600;
    color: #ffffff;
    margin:0px 0px 0px 0px;
    text-align: center;
} 

@media(max-width:768px){

.id_{{ section.id }}{
   padding:200px 20px;
}


.id_{{ section.id }} .container h2{
    font-size: 28px;
}
  
}    

</style>

<section class="id_{{ section.id }}"> 
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
  </div>
  
</section>












{% schema %}
  {
    "name": "Zilch Bg Section",
    "settings": [
      {
        "type": "image_picker",
        "label": "Select BG Image",
        "id": "bg_img"
      },
      {
        "type": "text",
        "label": "Title",
        "id": "title",
        "default":"Join over 3,000,000 Customers Worldwide"
      }
    ],
    "presets": [
      {
        "name": "Zilch Bg Section"
      }
    ]
  }
{% endschema %}


















